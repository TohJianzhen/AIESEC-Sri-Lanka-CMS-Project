<% layout('layouts/boilerplate')%>
    <main class="container mt-3">
        <figure class="text-center">
            <h1 class="display-3">Payment Management</h1>
        </figure>
        <table class="table table-hover" id="payment">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price</th>
                    <th scope="col">Total</th>
                    <th scope="col">Status</th>
                    <th scope="col">CRUD</th>
                </tr>
            </thead>
            <tbody>
                <% paymentmanagement.forEach((payment)=>{%> 
                    <tr>
                        <td><%= payment.ID%> </td>
                        <td><%= payment.Name %> </td>
                        <td><%= payment.Quantity %> </td>
                        <td><%= payment.Price %> </td>
                        <td><%= payment.Total %> </td>
                        <td><%= payment.Status %> </td>
                        <td>
                            <a href="/crud/pay/<%=payment.ID %>" class="btn btn-sm btn-primary">Pay</a>
                            <a href="/crud/Cancel/<%=payment.ID %>" class="btn btn-sm btn-danger">Cancel</a>
                        </td>
                    </tr>
                <%})%> 
            </tbody>
        </table>
        
    