<% layout('layouts/boilerplate')%>
    <main class="container mt-3">
        <figure class="text-center">
            <h1 class="display-3">Admin Users</h1>
        </figure>
        <div class="my-5">
            <a class="btn btn-primary" href="/crud/addUser">Add</a>
        </div>
        <table class="table table-hover" id="adminUser">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Status</th>
                    <th scope="col">Role</th>
                    <th scope="col">CRUD</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach((user)=>{%> 
                    <tr>
                        <td><%= user.ID%> </td>
                        <td><%= user.FirstName %> </td>
                        <td><%= user.LastName %> </td>
                        <td><%= user.Email %> </td>
                        <td><%= user.Status %> </td>
                        <td><%= user.Role %> </td>
                        <td>
                            <a href="/crud/editUser/<%=user.ID %>" class="btn btn-sm btn-primary">Edit</a>
                        </td>
                    </tr>
                <%})%> 
            </tbody>
        </table>
        
    