<% layout('layouts/loginboiler')%>
<h1 class="text-center">Log In</h1>
<form action="/auth" method="POST" class="was-validated">
    <div class="col-md-6 offset-md-3">
        <div class="mb-3">
            <label class="form-label" for="Email">Email</label>
            <input class="form-control is-valid" id="Email" type="email" name="Email" placeholder="Email" required>
            <div class="invalid-feedback">
                Please enter a valid email address!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="Password">Password: </label>
            <input class="form-control is-valid" type="password" name="Password" placeholder="Password" required>
            <div class="invalid-feedback">
                Please enter a password!
            </div>
        </div>
        <div class="mb-3">
            <button class="btn btn-success">Log In</button> 
        </div>
    </div>
</form>
    
