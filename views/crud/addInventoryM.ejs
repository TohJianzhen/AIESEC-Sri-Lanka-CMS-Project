<% layout('layouts/boilerplate')%>

<div class="row">
    <h1 class="text-center">New Inventory</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/inventoryMSave" method="POST" class="was-validated">
            <div class="mb-3">
                <label class="form-label" for="ID">ID</label>
                <input class="form-control" type="number" id="ID" name="ID" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="InventoryID">Inventory ID</label>
                <input class="form-control" type="number" id="InventoryID" name="InventoryID" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="ProductID">Product ID</label>
                <input class="form-control" type="number" id="ProductID" name="ProductID" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="PurchasePrice">Purchase Price</label>
                <input class="form-control" type="number" id="PurchasePrice" min="0.00" step="0.01" name="PurchasePrice" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="SellingPrice">Selling Price</label>
                <input class="form-control" type="number" id="SellingPrice"  min="0.00" step="0.01" name="SellingPrice" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="Quantity">Quantity</label>
                <input class="form-control" type="number" id="Quantity" name="Quantity" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Add Inventory</button>
            </div>
        </form>
        <a href="/managerInventory">All Inventory</a>
    </div>
</div>